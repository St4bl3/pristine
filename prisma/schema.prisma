// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  category        String
  image           String
  description     String
  startingPrice   Float
  currentBid      Float
  auctionEndTime  DateTime
  status          String
  bids            Bid[]

  @@index([status])
  @@index([category])
}

model Bid {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  bidAmount  Float
  bidderId   String
  timestamp  DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [id])
  productId  String   @db.ObjectId
}

model Ledger {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  productId  String
  bidderId   String
  bidAmount  Float
  timestamp  DateTime @default(now())
}
